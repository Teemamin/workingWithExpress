<%- include('../includes/head.ejs')%>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs')%>

    <main>
        <%if(errorMessage){%>
            <div class="user-message user-message--error"><%=errorMessage%></div>
        <%}%>
        <form class="product-form" action="/admin/<% if(editing){ %>edit-product <% } else{ %>add-product <% } %>" method="POST" novalidate>
            <div class="form-control">
                <label for="title">Title</label>
                <input 
                class="<%=validationErrors.find(e=>e.param === 'title') ? 'invalid' : ''%>"
                type="text"
                name="title" id="title"
                value="<% if(editing || hasError){ %> <%= product.tittle %> <% } %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image Url</label>
                <input type="text"
                class="<%=validationErrors.find(e=>e.param === 'imageUrl') ? 'invalid' : ''%>"  
                name="imageUrl" id="imageUrl" 
                value="<% if(editing || hasError){ %> <%= product.imageUrl %> <% } %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number"
                class="<%=validationErrors.find(e=>e.param === 'price') ? 'invalid' : ''%>"
                name="price" id="price" step="0.01"
                 value="<% if(editing || hasError){ %><%=product.price %><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" class="<%=validationErrors.find(e=>e.param === 'description') ? 'invalid' : ''%>" id="description" rows="5" ><% if(editing || hasError){ %> <%=product.description%> <% } %></textarea>
            </div>
            <% if(editing){ %> 
                <input type="hidden" name="productId" value="<%=product._id%>"> 
            <% } %>
            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
            <button type="submit"><% if(editing){ %>Update Product <% } else{ %>Add Product <% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs')%>